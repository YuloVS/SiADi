<Window x:Class="SiADi.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiADi.WPF"
        xmlns:controls="clr-namespace:SiADi.WPF.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <controls:NavbarVertical Grid.Column="0" DataContext="{Binding Navigator}"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:BarraSuperior Grid.Row="0" DataContext="{Binding Navigator}"/>
            <controls:BarraSuperiorAsistencias Grid.Row="1" DataContext="{Binding Navigator}"/>
            <ContentControl Grid.Row="2" Content="{Binding Navigator.CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>
